import QtQuick 2.15
import QtQuick.Controls 2.15
import QtQuick.Layouts 1.3
import Vedder.vesc.utility 1.0

import Vedder.vesc.commands 1.0
import Vedder.vesc.configparams 1.0

Item {
    id: mainItem
    anchors.fill: parent
    anchors.margins: 5

    property Commands mCommands: VescIf.commands()
    property ConfigParams mMcConf: VescIf.mcConfig()
    property ConfigParams mCustomConf: VescIf.customConfig(0)

    ColumnLayout {
        id: gaugeColumn
        anchors.fill: parent

        ScrollView {
            Layout.fillWidth: true
            Layout.fillHeight: true
            clip: true
            contentWidth: mainItem.width

            ColumnLayout {
                anchors.fill: parent
                width: mainItem.width

                Text {
                    id: header
                    color: Utility.getAppHexColor("lightText")
                    Layout.margins: 0
                    Layout.fillWidth: true
                    text: "Dash35B Package"
                    font.underline: false
                    font.weight: Font.Black
                    font.pointSize: 18
                }

                Rectangle {
                    Layout.fillWidth: true
                    Layout.preferredHeight: 2
                    color: Utility.getAppHexColor("lightText")
                }

                Text {
                    id: notes
                    color: Utility.getAppHexColor("lightText")
                    Layout.margins: 0
                    Layout.fillWidth: true
                    wrapMode: Text.WordWrap
                    text: "Notes: Requires matching Dash35B package on ESC! WiFi and Bluetooth may not be enabled concurrently!"
                }
                Rectangle {
                    Layout.fillWidth: true
                    Layout.preferredHeight: 2
                    color: Utility.getAppHexColor("lightText")
                }
                RowLayout {
                    Text {
                        text: "Package Version:"
                        color: Utility.getAppHexColor("lightText")
                    }
                    Text {
                        id: versionText
                        text: "{{VERSION}}"
                        color: Utility.getAppHexColor("lightText")
                        font.weight: Font.Black
                    }
                }
            }
        }
    }
}
